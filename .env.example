# Backend Environment Variables
# Copy this to backend/.env and fill in your values

# Database
MONGODB_URI=mongodb://localhost:27017/hospital_management
# For production, use MongoDB Atlas or other cloud database:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hospital_management

# JWT Secret (use a strong, random string in production)
JWT_SECRET=your_jwt_secret_here

# Server Configuration
PORT=5000
NODE_ENV=development

# For production deployment on Vercel:
# NODE_ENV=production

# Frontend Environment Variables
# Copy this to frontend/.env and fill in your values

# API Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_SERVER_URL=http://localhost:5000

# For production deployment on Vercel:
# REACT_APP_API_URL=https://your-app-name.vercel.app
# REACT_APP_SERVER_URL=https://your-app-name.vercel.app

# Build Configuration
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=true
